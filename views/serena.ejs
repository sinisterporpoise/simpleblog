						        <% for (let j = titles.length - 1; j >= 0; j--) { %>
						            <h3><%= titles[j].title %></h3>
						            <br>
						            <%- titles[j].blog_post %>
						        <% } %>
						    <% } %>
						</div>
							
				</div><!-- End Stories -->
				<div id = "archives" class = "archives">
				<h5>Previous Stories</h5>
